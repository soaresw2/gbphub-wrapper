services:
  opsui:
    image: node-wrapper
    volumes:
      - ./opsui-host-tool:/app
      - node_modules:/app/node_modules
      - ./root:/root
    working_dir: /app
    env_file: .env.shared
    ports:
      - 3000:3000
    command: npm start

  gbpseui:
    image: node-wrapper
    volumes:
      - ./gbpseui-tool:/app
      - node_modules:/app/node_modules
      - ./root:/root
    working_dir: /app
    env_file: .env.shared
    ports:
      - 3001:3000
    command: npm start

  gbpcui:
    image: node-wrapper
    volumes:
      - ./gbpcui-tool:/app
      - node_modules:/app/node_modules
      - ./root:/root
    working_dir: /app
    env_file: .env.shared
    ports:
      - 3002:3000
    command: npm start

volumes:
  node_modules:
